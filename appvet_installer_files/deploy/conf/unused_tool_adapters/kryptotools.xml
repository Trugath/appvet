<?xml version="1.0" encoding="UTF-8"?>

<appvet:ToolServiceAdapter xmlns:appvet="http://csrc.nist.gov/projects/appvet"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://csrc.nist.gov/projects/appvet ToolServiceAdapter.xsd ">

	<appvet:Description>
		<appvet:Name>Kryptowire App Analysis Tools</appvet:Name>
		<appvet:Id>kryptotools</appvet:Id>
		<appvet:VendorName>Kryptowire</appvet:VendorName>
		<appvet:VendorWebsite>http://www.kryptowire.com</appvet:VendorWebsite>
		<appvet:ReportFile>PDF</appvet:ReportFile>
	</appvet:Description>

	<appvet:Protocol>
		<appvet:Type>ASYNCHRONOUS</appvet:Type>
		<appvet:Asynchronous>
			<appvet:Request>
				<appvet:URL>https://174.78.150.116:1443/kryptowire_reports.php
				</appvet:URL>
				<appvet:Method>POST</appvet:Method>
				<appvet:Parameter>
					<!-- I've set it up where we just use a key for authentication for now. 
						Could you stick that in the userid field and ignore the password one? -->
					<appvet:Name>username</appvet:Name>
					<appvet:Value>appvet</appvet:Value>
				</appvet:Parameter>
<!--
				<appvet:Parameter>
					<appvet:Name>password</appvet:Name>
					<appvet:Value>APPVET_DEFINED</appvet:Value>
				</appvet:Parameter>
-->
				<appvet:Parameter>
					<appvet:Name>appid</appvet:Name>
					<appvet:Value>APPVET_DEFINED</appvet:Value>
				</appvet:Parameter>
				<appvet:Parameter>
					<appvet:Name>file</appvet:Name>
					<appvet:Value>APP_FILE</appvet:Value>
				</appvet:Parameter>
				<!-- The following is required by Kryptowire tools. -->
				<appvet:Parameter>
					<appvet:Name>org</appvet:Name>
					<appvet:Value>appvet</appvet:Value>
				</appvet:Parameter>
			</appvet:Request>

			<!-- The following is the immediate response from the tool service to 
				AppVet. The response should be empty but have an appropriate HTTP Code (e.g., 
				'202' meaning accepted for processing or '400' bad request). -->

			<appvet:Response />

			<!-- The following is the report sent to AppVet using an HTTP POST Request. -->

			<appvet:PushResponse>

				<appvet:URL>https://appsec.nist.gov/appvet</appvet:URL>
				<appvet:Method>POST</appvet:Method>
				<appvet:Parameter>
					<appvet:Name>appid</appvet:Name>
					<appvet:Value>SET_BY_TOOL</appvet:Value>
				</appvet:Parameter>

				<appvet:Parameter>
					<appvet:Name>username</appvet:Name>
					<appvet:Value>kryptowire</appvet:Value>
				</appvet:Parameter>

				<appvet:Parameter>
					<appvet:Name>password</appvet:Name>
					<appvet:Value>kryptowirepassword</appvet:Value>

				</appvet:Parameter>

				<appvet:Parameter>
					<appvet:Name>toolrisk</appvet:Name>
					<appvet:Value>SET_BY_TOOL</appvet:Value>
				</appvet:Parameter>
				
				<appvet:Parameter>
					<appvet:Name>file</appvet:Name>
					<appvet:Value>SET_BY_TOOL?</appvet:Value>
				</appvet:Parameter>

			</appvet:PushResponse>


		</appvet:Asynchronous>

	</appvet:Protocol>

</appvet:ToolServiceAdapter>